#include <stdio.h>
int main()
{
    int size, a[100], i;
    printf("Enter size of array = ");
    scanf("%d",&size);
    printf("Enter elements of array\n");
    for(i=0;i<size;i++)
    {
        scanf("%d",&a[i]);
    }
    float avg;
    int sum = 0;
    for(i=0;i<size;i++)
    {
        sum = sum + a[i];
    }
    float s = size;
    avg = sum / s;
    printf("saverage of elements of array = %f", avg);
    return 0;
}
