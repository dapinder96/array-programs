#include<stdio.h>  // reverse of an array
int main()
{
    int size, i, a[100];
    printf("Enter size of array = ");
    scanf("%d",&size);
    printf("Enter elements of array\n");
    for(i=1;i<=size;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("\nOriginal array\n");
    for(i=1;i<=size;i++)
    {
        printf("%d ", a[i]);
    }
    printf("\nreversed of array\n");
    for(i=size;i>=1;i--)
    {
        printf("%d ", a[i]);
    }
    return 0;
}
